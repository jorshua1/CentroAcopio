<Window x:Class="CentroAcopio.Views.Product.CreateProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="CreateProduct" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" /> <!-- Esto se ajustará automáticamente -->
            <RowDefinition Height="200" /> <!-- Esto se ajustará al contenido -->
        </Grid.RowDefinitions>

        <!-- Aquí está tu contenido -->
        <DataGrid x:Name="MyDataGrid" Width="Auto" Height="Auto"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto" />

        <!-- Otro contenido, como botones, etc., en la siguiente fila (Grid.Row="1") -->
        <StackPanel Grid.Row="1">
            <TextBlock>Algo de texto solo para decorar</TextBlock>
        </StackPanel>
    </Grid>
</Window>